<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="Lost username or password">
		<message>Lost username or password</message>
	</layout>

	<!-- Add fields to the parameters object for the layout. -->
	<fields name="params">

		<!-- Basic options. -->
		<fieldset name="basic" label="COM_MENUS_BASIC_FIELDSET_LABEL">
			<field name="lostdescription_show" type="list" label="Show Description"  default="1">
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>
			<field name="lost_description" type="textarea" label="Description" rows="3" cols="40" />
		</fieldset>
	</fields>
</metadata>
