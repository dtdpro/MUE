<?xml version="1.0" encoding="utf-8"?>
<!-- $Id: question.xml 62 2010-11-28 16:08:16Z chdemko $ -->
<form>
	<fieldset name="settings">
		<field
			name="ug_id"
			type="hidden"
		/>
		<field
			name="published"
			type="list"
			id="published"
			class="inputbox"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC"
			size="1"
			default="1"
			filter="integer">
			<option	value="1">JPUBLISHED</option>
			<option	value="0">JUNPUBLISHED</option>
			<option	value="2">JARCHIVED</option>
			<option	value="-2">JTRASHED</option>
		</field>
		<field
			name="access"
			type="accesslevel"
			id="access"
			class="inputbox"
			label="JFIELD_ACCESS_LABEL"
			description="JFIELD_ACCESS_DESC"
			default="1"
			filter="integer"/>
		<field 
			name="ordering" 
			type="OrderUGroup" 
			class="inputbox"
			label="JFIELD_ORDERING_LABEL"
			description="JFIELD_ORDERING_DESC" 
		/>
	</fieldset>	
	<fieldset name="details">
		<field
			name="ug_name"
			type="text"
			label="COM_MUE_UGROUP_FIELD_NAME_LABEL"
			description="COM_MUE_UGROUP_FIELD_NAME_DESC"
			size="40"
			class="inputbox"
			required="true"
			default=""
		/>
		<field
			name="ug_desc"
			type="textarea"
			label="COM_MUE_UGROUP_FIELD_DESC_LABEL"
			description="COM_MUE_UGROUP_FIELD_DESC_DESC"
			rows="4"
			cols="70"
			class="inputbox"
			required="false"
			filter="safehtml"
			buttons="false"
		/>
		<field
			name="ug_welcome_email"
			type="editor"
			label="COM_MUE_UGROUP_FIELD_WELCOMEEML_LABEL"
			description="COM_MUE_UGROUP_FIELD_WELCOMEEML_DESC"
			class="inputbox"
			filter="raw"
			buttons="false"
		/>
		<field
			name="ug_lostinfo_email"
			type="editor"
			label="COM_MUE_UGROUP_FIELD_LOSTEML_LABEL"
			description="COM_MUE_UGROUP_FIELD_LOSTEML_DESC"
			class="inputbox"
			filter="raw"
			buttons="false"
		/>

	</fieldset>
	

</form>

